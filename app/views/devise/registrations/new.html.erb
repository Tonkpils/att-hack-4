<div class="grid">
  <div class="grid-title login"><h1 class="text-center">Sign Up</h1>
  </div>
  <div class="grid-content sign-in-form" id="sign-in">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="formRow">
          <div class="">
        <div><%= f.email_field :email, :autofocus => true, placeholder: "Email..." %></div>
            </div>
          </div>
            <div class="formRow">
              <div class="">
        <div><%= f.password_field :password, placeholder: "Password..." %></div>
                </div>
              </div>
        <div class="formRow">
          <div class="">
            <div><%= f.password_field :password_confirmation, placeholder: "Password Confirmation..." %></div>
          </div>
        </div>

        <div><%= f.submit "Sign up" %></div>
    <% end %>
    </div>

  <%= render "devise/shared/links" %>
</div>



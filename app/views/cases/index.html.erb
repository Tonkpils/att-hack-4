<h1>Listing cases</h1>

<table>
  <%- if @cases.any? %>
  <tr>
    <th>Case Name</th>
    <th>Client Name</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%- else %>
  No cases stored
<%- end %>

<%- @cases.each do |c| %>
  <tr>
    <td><%= c.name %></td>
    <td><%= c.client.name %></td>
    <td></td>
    <td><%= link_to 'Show', c %></td>
    <td><%= link_to 'Edit', edit_case_path(c) %></td>
    <td><%= link_to 'Destroy', case_path(c), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

